<UserControl x:Class="ControlUp.Controls.ColorPickerButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="30" d:DesignWidth="180">
    <Button x:Name="PickerButton" Click="PickerButton_Click" Padding="4" HorizontalAlignment="Left">
        <StackPanel Orientation="Horizontal">
            <Border x:Name="ColorPreview"
                    Width="24" Height="24"
                    BorderBrush="#808080" BorderThickness="1"
                    CornerRadius="2" Margin="0,0,8,0"/>
            <TextBlock x:Name="ColorHexText"
                       VerticalAlignment="Center"
                       FontFamily="Consolas"
                       Text="#000000"/>
        </StackPanel>
    </Button>
</UserControl>
