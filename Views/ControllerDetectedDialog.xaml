<Window x:Class="ControlUp.Dialogs.ControllerDetectedDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Controller Detected"
        Width="520"
        Height="320"
        WindowStartupLocation="Manual"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        KeyDown="Window_KeyDown"
        Loaded="Window_Loaded"
        SourceInitialized="Window_SourceInitialized">

    <Window.Resources>
        <!-- Controller-friendly button style -->
        <Style x:Key="ControllerButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="50"/>
            <Setter Property="MinWidth" Value="140"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Main container - more transparent to show blur effect -->
    <Border x:Name="MainBorder"
            Background="#011E1E1E"
            BorderBrush="#424242"
            BorderThickness="1"
            CornerRadius="0"
            Padding="0">

        <Grid Margin="24,20,24,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Controller Icon and Title -->
            <StackPanel Grid.Row="0"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,12">
                <TextBlock Text="&#x1F3AE;"
                           FontSize="42"
                           Foreground="White"
                           VerticalAlignment="Center"
                           Margin="0,0,14,0"/>
                <TextBlock Text="Controller Detected"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Message -->
            <TextBlock Grid.Row="1"
                       Text="A game controller has been connected."
                       FontSize="15"
                       Foreground="#B0B0B0"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,6"/>

            <!-- Buttons and question grouped together -->
            <StackPanel Grid.Row="2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">

                <TextBlock Text="Switch to Fullscreen Mode?"
                           FontSize="17"
                           Foreground="White"
                           FontWeight="Medium"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,12"/>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">

                <!-- Yes Button (A) -->
                <Button x:Name="YesButton"
                        Style="{StaticResource ControllerButtonStyle}"
                        Background="#4CAF50"
                        BorderBrush="#66BB6A"
                        BorderThickness="2"
                        Click="YesButton_Click"
                        IsDefault="True">
                    <StackPanel Orientation="Horizontal">
                        <Border Background="#388E3C"
                                CornerRadius="4"
                                Padding="6,2"
                                Margin="0,0,10,0"
                                VerticalAlignment="Center">
                            <TextBlock Text="A"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                        </Border>
                        <TextBlock Text="Yes"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Cancel Button (B) -->
                <Button x:Name="CancelButton"
                        Style="{StaticResource ControllerButtonStyle}"
                        Background="#616161"
                        BorderBrush="#757575"
                        BorderThickness="2"
                        Click="CancelButton_Click"
                        IsCancel="True">
                    <StackPanel Orientation="Horizontal">
                        <Border Background="#424242"
                                CornerRadius="4"
                                Padding="6,2"
                                Margin="0,0,10,0"
                                VerticalAlignment="Center">
                            <TextBlock Text="B"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                        </Border>
                        <TextBlock Text="Cancel"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                </StackPanel>
            </StackPanel>

            <!-- Countdown and hint -->
            <StackPanel Grid.Row="3" HorizontalAlignment="Center" Margin="0,10,0,0">
                <TextBlock x:Name="CountdownText"
                           Text="Auto-closing in 20s..."
                           FontSize="12"
                           Foreground="#808080"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="D-Pad: Select  |  A: Confirm  |  B: Cancel"
                           FontSize="11"
                           Foreground="#606060"
                           HorizontalAlignment="Center"
                           Margin="0,4,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
